@{
}

<!--Connect model-->
@model ProvoRestaurants.Models.UserRestaurant

<!--Form for submitting restaurants with validation-->
<form asp-action="Submit" method="post">
    <div asp-validation-summary="All">
        @Html.ValidationSummary(true) <!--Shows validation-->

        <!--Connect model on both labels and inputs so clicking either will highlight the appropriate input field-->
        <!--Get name of submitter-->
        <div>
            <label asp-for="SubmitterName">Submitter's Name:</label>
            <input asp-for="SubmitterName" />
        </div>

        <!--Get restaurant name-->
        <div>
            <label asp-for="RestaurantName">Restaurant's Name:</label>
            <input asp-for="RestaurantName" />
        </div>

        <!--Get user's favorite dish from the specified restaurant-->
        <div>
            <label asp-for="FavoriteDish">Favorite Dish:</label>
            <input asp-for="FavoriteDish" />
        </div>

        <!--Get the phone number of the restaurant-->
        <div>
            <label asp-for="RestaurantPhone">Restaurant's Phone Number:</label>
            <input asp-for="RestaurantPhone" />
        </div>

        <button type="submit">Submit Restaurant</button>
    </div>
</form>